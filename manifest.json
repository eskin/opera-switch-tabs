{
  "manifest_version": 2,

  "name": "Switch tabs with Ctrl+PgUp/PgDn",
  "description": "Lets you switch tabs using Ctrl-PageUp and Ctrl-PageDown",
  "version": "0.0.1",
  "icons": { "16": "icon_16.png",
             "48": "icon_48.png",
            "128": "icon_128.png" },

  "permissions": ["tabs"],
  "background": {"scripts": ["background.js"]},

  "commands": {
    "previoustab": {
      "suggested_key": {
        "windows": "Ctrl+PageUp",
        "mac": "MacCtrl+PageUp"
      },
    "description": "Switches to previous tab"
    },

    "nexttab": {
      "suggested_key": {
        "default": "Ctrl+PageDown",
        "mac": "MacCtrl+PageDown"
      },
    "description": "Switches to next tab"
    }
  }
}
